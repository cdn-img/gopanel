#!/bin/sh

set -e

dpkg-maintscript-helper mv_conffile /etc/php5/fpm/main.conf /etc/php5/fpm/php-fpm.conf 5.3.5-1 -- "$@"

php_enable() { return 0; }

if [ "$1" = "remove" ]; then
    if [ -e /usr/lib/php/php-maintscript-helper ]; then
	. /usr/lib/php/php-maintscript-helper

	mods=$(phpquery -M -v 7.1)
	for mod in $mods; do
	    php_invoke dismod 7.1 fpm $mod
	done
    else
	for mod in /etc/php/7.1/conf.d/*.ini; do 
	    rm -f $mod
	    for ext in '~' '%' .bak .ucf-new .ucf-old .ucf-dist;  do
		rm -f $mod$ext
	    done
	done
    fi
fi

if [ "$1" = "purge" ]; then
    phpini=/etc/php/7.1/fpm/php.ini
    # remove the flag to remember the original state
    if [ -e /etc/php/7.1/fpm/.start ]; then
	rm -f /etc/php/7.1/fpm/.start
    fi
    for ext in '~' '%' .bak .ucf-new .ucf-old .ucf-dist;  do
	rm -f $phpini$ext
    done
    rm -f $phpini
    if which ucf >/dev/null; then
	ucf --purge $phpini
    fi
    if which ucfr >/dev/null; then
	ucfr --purge php7.1-fpm $phpini
    fi

    for dir in \
	/etc/php/7.1/fpm/conf.d \
	/etc/php/7.1/fpm \
	/etc/php/7.1/ \
	/etc/php; do
	
	if [ -d $dir ]; then
	    rmdir --ignore-fail-on-non-empty $dir
	fi
    done
fi

# Automatically added by dh_installinit
if [ "$1" = "purge" ] ; then
	update-rc.d php7.1-fpm remove >/dev/null
fi


# In case this system is running systemd, we make systemd reload the unit files
# to pick up changes.
if [ -d /run/systemd/system ] ; then
	systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section
# Automatically added by dh_systemd_enable
if [ "$1" = "remove" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper mask php7.1-fpm.service >/dev/null
	fi
fi

if [ "$1" = "purge" ]; then
	if [ -x "/usr/bin/deb-systemd-helper" ]; then
		deb-systemd-helper purge php7.1-fpm.service >/dev/null
		deb-systemd-helper unmask php7.1-fpm.service >/dev/null
	fi
fi
# End automatically added section
# Automatically added by dh_apache2
if [ "$1" = "purge" ] ; then
	if php_enable; then
		if [ -e /usr/share/apache2/apache2-maintscript-helper ] ; then
			. /usr/share/apache2/apache2-maintscript-helper

			for conf in php7.1-fpm  ; do
				apache2_invoke disconf $conf  || exit $?
			done
		fi
	fi
fi
# End automatically added section


exit 0
